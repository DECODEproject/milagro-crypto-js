{
  "name": "milagro-crypto-js",
  "version": "3.0.2",
  "description": "Crypto Library in Javascript - Refact of Apache Milagro Crypto Library",
  "main": "milagro-crypto.js",
  "directories": {
    "doc": "doc",
    "example": "examples",
    "test": "test"
  },
  "scripts": {
    "test": "mocha --reporter mocha-text-cov ",
    "coverage": "nyc mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/miracl/milagro-crypto-js.git"
  },
  "keywords": [
    "pairing",
    "elliptic",
    "curve",
    "cryptography"
  ],
  "author": "Michael Scott, Alessandro Budroni, Kealan McCusker",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/miracl/milagro-crypto-js/issues"
  },
  "homepage": "https://github.com/miracl/milagro-crypto-js#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "coveralls": "^2.12.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0"
  },
  "dependencies": {},
  "nyc": {
    "include": [
      "src/*.js"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
